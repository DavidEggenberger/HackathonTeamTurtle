@page
@model WebAPI.Pages.ProfileModel
@{
}
<style>
    .profileForm{
        display: flex;
        flex-direction: column;
    }
    label{
        font-size: 18px;
    }
    section{
        display: flex;
        flex-direction: column;
        margin-bottom: 5px;
    }
    section:last-of-type{
        margin-bottom: 0;
    }
</style>
<div class="LoginForm">
    <h3 style="margin-bottom: 5px;">Configure your Profile Settings</h3>
    <main>
        <form method="post">
            <section>
                <label>Your Motto:</label>
                <input value="@Model.Motto" asp-for="Motto"/>
            </section>
            <section>
                <label>Is your profile private:</label>
                <input asp-for="PrivateProfile" type="checkbox"/>
            </section>
            <section style="width: 100%; height: 50px; display: flex; align-content: center; justify-content: space-around;">
                <button style="width: 160px;" type="submit">Save Changes</button>
                <form method="post" asp-page-handler="Redirect">
                    <button type="submit">Back To Home</button>
                </form>
            </section>
        </form>
    </main>
</div>